<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
        <item name="android:fontFamily">@font/kaushanscript</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="StyleFragment" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/negroFondo</item>
        <item name="android:background">@color/gray</item>

    </style>

    <style name="transitionStyle" parent="AppTheme">

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>

    </style>

    <style name="BaseAppTheme" parent="android:Theme.Material">
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform</item>
    </style>
    <style name="Sopa">
        <item name="android:textColor">@color/negroFondo</item>
        <item name="android:colorBackground">@color/blancoFondo</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="MyShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>
    <style name="noStyle" parent="Theme.AppCompat">
        <item name="materialThemeOverlay">@drawable/roundedbutton</item>
    </style>

</resources>
