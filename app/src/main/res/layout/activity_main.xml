<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/layout">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:background="#B3FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnIniciar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="144dp"
            android:layout_marginTop="120dp"
            android:text="INICIAR"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnContinuar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:enabled="false"
            android:text="CONTINUAR"
            app:layout_constraintStart_toStartOf="@+id/btnIniciar"
            app:layout_constraintTop_toBottomOf="@+id/btnIniciar" />

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="204dp"
            android:text="SALIR"
            app:layout_constraintStart_toStartOf="@+id/btnContinuar"
            app:layout_constraintTop_toBottomOf="@+id/btnContinuar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>